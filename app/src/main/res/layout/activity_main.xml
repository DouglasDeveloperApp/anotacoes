<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/fundo"
tools:context="paixaoporti.com.br.anotacoes.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="@drawable/logo" />

    <EditText
        android:id="@+id/textoId"
        android:layout_width="320dp"
        android:layout_height="420dp"
        android:layout_alignEnd="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:background="@drawable/fundo_anotacao"
        android:gravity="start"
        android:fontFamily="monospace"
        android:inputType="textMultiLine"
        android:paddingBottom="5dp"
        android:paddingLeft="35dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:textColor="#41342e" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/botaoSalvarId"
    android:layout_below="@+id/textoId"
    android:layout_alignLeft="@+id/textoId"
    android:layout_alignStart="@+id/textoId"
    android:background="@drawable/botao_salvar" />

    <ImageView
        android:id="@+id/compar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botaoSalvarId"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon" />
</RelativeLayout>
